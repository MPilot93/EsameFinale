@model RoomModel;

@{
    ViewBag.Title = "Confermare operazione";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div>Conferma IdSala da resettare:</div>
        <hr>
         <div class="form-group">
            @Html.LabelFor(model => model.IdRoom, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdRoom)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Invia" class="btn btn-primary"/>
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Annulla","Index")
</div>